<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Pix</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body >
    <header class="navColor">
        <nav class="navColor navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navColorTypography" asp-area="" asp-controller="Home" asp-action="Index">Pix</a>
                <div class=" navColor navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a  class="nav-link navColorTypography " asp-area="" asp-controller="Home"
                                asp-action="Index">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link navColorTypography " asp-area="" asp-controller="ImageUploads" asp-action="AddImg">Add Image</a>
                        </li>
                         <li class="nav-item">
                            <a class="nav-link navColorTypography " asp-area="" asp-controller="Albums" asp-action="AllAlbums">Albums</a>
                        </li>
                        
                        @if (Context.Session.GetInt32("UserId") != null)
                        {
                            <form asp-controller="Home" asp-action="Logout" method="post">
                                <button class="nav-link text-dark btn btn-danger navColorTypography " >Logout</button>
                            </form>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Pix - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>
